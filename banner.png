from PIL import Image, ImageDraw, ImageFont

# Set the dimensions of the banner
width = 800
height = 200

# Create a new image with a dark blue background
img = Image.new('RGB', (width, height), color = (33, 33, 33))

# Load the font
font = ImageFont.truetype('OpenSans-Bold.ttf', 40)

# Create a drawing context
d = ImageDraw.Draw(img)

# Draw the icon (this is a simplified version, you can use a more complex design)
d.rectangle((width // 2 - 50, height // 2 - 50, width // 2 + 50, height // 2 + 50), fill = (255, 255, 255))

# Draw the text
d.text((width // 2 - 100, height // 2 - 100), 'Cyber PDF', font = font, fill = (255, 140, 0))
d.text((width // 2 - 100, height // 2 + 20), 'Injector', font = font, fill = (255, 140, 0))

# Save the image
img.save('banner.png')
